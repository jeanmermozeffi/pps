{% macro valeur_ligne(valeur) %}
    <tr class="prototype_valeur_ligne even pointer">
        <td width="90%">
            <div class="form-group">
                <div class="col-md-12">{{ form_row(valeur.libelle) }}</div>
            </div>
        </td>
        <td class="hide">
            <div class="form-group">
                <div class="col-md-12">{{ form_row(valeur.pourcentage) }}</div>
            </div>
        </td>
        <td class="del-col"></td>
    </tr>
{% endmacro %}


{% macro diagnostic_questionnaire(valeur) %}
    <tr class="prototype_diagnostic even pointer">
        <td width="66%">
            <div class="form-group">
                <div class="col-md-12">{{ form_row(valeur.libelle) }}</div>
                <div class="col-md-12">{{ form_row(valeur.stat) }}</div>
            </div>
        </td>
        <td width="12%">
            <div class="form-group">
                <div class="col-md-12">{{ form_row(valeur.pourcentageMin) }}</div>
            </div>
        </td>
         <td width="12%">
            <div class="form-group">
                <div class="col-md-12">{{ form_row(valeur.pourcentageMax) }}</div>
            </div>
        </td>
        <td class="del-col"></td>
    </tr>
{% endmacro %}