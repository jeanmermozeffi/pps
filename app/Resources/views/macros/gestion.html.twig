{% macro gestionnaire_hopital(hopital) %}
    <div class="prototype_hopital even pointer row" style="margin-bottom: 5px">
        <div class="col-md-10">
            {{ form_widget(hopital.hopital) }}
        </div>
      
        
        <div class="col-md-2 del-col">
        </div>
    </div>
{% endmacro %}


