{% macro medicament_pharmacie(medicament, key, medicaments) %}
    
    <tr class="prototype_medicament even pointer">
        <td>
            {{ medicaments[key].medicament.nom }}
            <div class="hide">{#{ form_widget(medicament.medicament) }}</div>
            
             {{ form_row(medicament.substitution) }#}</div>
            
        </td>
        <td width="5%">
            {{ form_widget(medicament.statut, {label: false}) }}
             
        </td>
        <td  width="10%">
            {{ form_widget(medicament.prix) }}
             
        </td>
        <td width="30%">
            {{ form_widget(medicament.commentaire) }}
        </td>

    </tr>
{% endmacro %}