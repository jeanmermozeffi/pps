{% block page_content %}
    <button type="button" class="btn btn-default btn-sm" data-toggle="modal" data-target="#modal-details{{ affection.id }}"><i
                class="fa fa-list-alt"></i></button>
    <div class="modal fade" id="modal-details{{ affection.id }}">

        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">Détails affection</h4>
                </div>

                <div class="modal-body">
                    <form class="form-horizontal">
                        <div class="box-body">
                            <div class="form-group">
                                <label for="nom" class="col-sm-2">Nom</label>

                                <div class="col-sm-10">
                                    <input type="text" class="form-control" id="nom" value="{{ affection.nom }}"
                                           disabled>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="details" class="col-sm-2">Détails</label>

                                <div class="col-sm-10">
                                    <input type="text" class="form-control" id="nom" value="{{ affection.details }}"
                                           disabled>
                                </div>
                            </div>
                        </div>
                        <input type="hidden" class="form-control" id="nom" value="{{ affection.id }}">

                    </form>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Annuler</button>
                </div>
            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>
{% endblock %}
