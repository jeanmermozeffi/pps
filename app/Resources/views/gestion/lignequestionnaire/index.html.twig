{% extends 'AvanzuAdminThemeBundle:layout:base-layout.html.twig' %}

    {% block page_content %}
     <div class="row">
        <div class="col-md-12">
            <!-- general form elements -->
            <div class="box box-danger">
                <div class="box-header">
                    <!-- Horizontal Form -->
                    <div class="">
                        <div class="box-header with-border">
                            <h3 class="box-title">Liste des questions - {{ questionnaire.libelle }}</h3>
                        </div>
                    </div>
                </div>
                <div class="box-body">
                     <a href="#" onclick="return {{ grid.hash }}_reset();" class="btn btn-success"><i class="fa fa-repeat"></i></a>
                     {% set redirect = path('gestion_lignequestionnaire_index', {id: questionnaire.id}) %}
                    <a class="btn btn-default" data-toggle="modal" data-target="#modal-table"
                            href="{{ path('gestion_lignequestionnaire_new', {id: questionnaire.id}) }}"
                           ><i class="fa fa-plus"></i> Nouveau </a>

                         <a class="btn btn-default" data-toggle="modal" data-target="#modal-table"
                            href="{{ path('gestion_questionnairedepistage_edit', {id: questionnaire.id, redirect: redirect}) }}"
                           ><i class="fa fa-edit"></i> Modifier le questionnaire </a>

                         <a class="btn btn-default" 
                            href="{{ path('gestion_questionnairedepistage_index') }}"
                           ><i class="fa fa-li"></i> Retour aux questionnaires </a>
                     <a class="btn btn-primary"
                            href="{{ path('gestion_questionnairedepistage_formulaire', {id: questionnaire.id}) }}"
                           ><i class="fa fa-eye"></i> Aper√ßu </a>
                    {{ grid(grid, 'blocks_js.jquery.html.twig') }}
                </div>
            </div>
        </div>
    </div>
    
    {% endblock %}
