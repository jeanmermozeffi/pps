{% extends 'AvanzuAdminThemeBundle:layout:base-layout.html.twig' %}
{% from 'GestionBundle:Macros:macro.html.twig' import info_patient %}
{% block page_content %}
<div class="row">
    {% if patient %}
    <div class="col-md-3 connectedSortable">
        {{ info_patient(patient, true) }}
    </div>
    {% endif %}
    <div class="col-md-{%if patient %}8{% else %}12{% endif %}">
        <!-- general form elements -->
        <div class="box box-danger">
            <div class="box-header">
                <!-- Horizontal Form -->
                <div class="">
                    <div class="box-header with-border">
                        <h3 class="box-title">Historique de dépistage Cancer du Col de l'Ultérus</h3>
                    </div>
                </div>
            </div>
            <div class="box-body">
                <a href="#" onclick="return {{ grid.hash }}_reset();" class="btn btn-success">
                    <i class="fa fa-repeat"></i></a>
                {% if patient and not is_granted('ROLE_CUSTOMER') %}
                <a class="btn btn-default"
                    href="{{ path('gestion_infoatientcancercol_new_patient', {id: patient.id}) }}"><i
                        class="fa fa-plus"></i> Nouveau </a>
                {% endif %}
                {% if not is_granted('ROLE_CUSTOMER') %}
                <a class="btn btn-default" href="{{ path('gestion_infopatientcancercol_search') }}"><i
                        class="fa fa-plus"></i> Nouveau </a>
                {% endif %}
                {{ grid(grid, 'grid/blocks_js.jquery.html.twig') }}
            </div>
        </div>
    </div>
</div>

{% endblock %}