{% extends 'AvanzuAdminThemeBundle:layout:base-layout.html.twig' %}

    {% block page_content %}
     <div class="row">
        <div class="col-md-12">
            <!-- general form elements -->
            <div class="box box-danger">
                <div class="box-header">
                    <!-- Horizontal Form -->
                    <div class="">
                        <div class="box-header with-border">
                            <h3 class="box-title">Liste des historiques</h3>
                        </div>
                    </div>
                </div>
                <div class="box-body">
                    {% if is_granted('ROLE_URGENTISTE') %}
                       <a class="btn btn-default" data-toggle="modal" data-target="#modal-table"
                            href="{{ path('gestion_historiqueurgence_new', {id: urgence.id}) }}" 
                           ><i class="fa fa-plus"></i> Nouveau  </a>
                    {% endif %}
                    <a class="btn btn-default"
                            href="{{ path('gestion_urgence_index') }}" 
                           >Retour  </a>
                   
                    <div>

                        <div class="list-group">
                            <div class="list-group-item list-group-item-danger">
                            <p><strong>{{ urgence.motif }}</strong></p>
                            <p>Signalé par {{ urgence.utilisateur.personne.nomComplet }} ( {{ urgence.utilisateur.personne.contact }} )</p>
                            <p>Localisation: {{ urgence.pays.nom }} - {{ urgence.ville.nom }} - {{ urgence.localisation }}</p>

                           
                        </div>
                   
                    {% for historique in historiques %}
                        <div class="list-group-item">
                            <p><strong>{{ historique.libelle }}</strong></p>
                            <p>Traité par {{ historique.utilisateur.personne.nomComplet }}</p>
                            
                        </div>
                    {% else %}
                        <div class="list-group-item text-center">Aucun historique</div>
                    {% endfor %}
                    
                </div>
                                {# display navigation #}
                                <div class="navigation">
                                    {{ knp_pagination_render(historiques) }}
                                </div>
                            </div>

                </div>
            </div>
        </div>
    </div>
    
    {% endblock %}
 {% block page_title %}
        
    {% endblock %}