{% extends 'AvanzuAdminThemeBundle:layout:base-layout.html.twig' %}

    {% block page_content %}
     <div class="row">
        <div class="col-md-12">
            <!-- general form elements -->
            <div class="box box-danger">
                <div class="box-header">
                    <!-- Horizontal Form -->
                    <div class="">
                        <div class="box-header with-border">
                            <h3 class="box-title">Liste des patientes suivis</h3>
                        </div>
                    </div>
                </div>
                <div class="box-body">
                    
                    <a class="btn btn-default"
                            href="{{ path('gestion_fiche_search') }}"
                           ><i class="fa fa-plus"></i> Nouvelle CPN </a>
                    <div class="table-responsive">
                     <table class="table table-bordered table-striped">
                                    <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>PIN</th>
                                        <th>Patient</th>
                                        <th>Actions</th>
                                    </tr>
                                    </thead>
                                    <tbody id="resultats_recherche">
                                    {% for patient in patients %}
                                        <tr>
                                            <td>{{ patient.identifiant }}</td>
                                            <td>{{ patient.pin }}</td>
                                            <td>{{ patient.personne.nomComplet }}</td>
                                            <td>
                                                <a href="{{ path ('gestion_fiche_histo',{'patient': patient.id}) }}" type="button" class="btn btn-info btn-xs" title="Afficher">
                                                    <i class="fa fa-calendar"></i> Historique
                                                </a>
                                                <a href="{{ path ('gestion_fiche_new_patient',{'patient': patient.id}) }}" type="button" class="btn btn-success btn-xs" title="Afficher">
                                                    <i class="fa fa-plus"></i> CPN
                                                </a>
                                            </td>
                                       
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>

                                {# display navigation #}
                                <div class="navigation">
                                    {{ knp_pagination_render(patients) }}
                                </div>
                            </div>

                </div>
            </div>
        </div>
    </div>
    
    {% endblock %}
