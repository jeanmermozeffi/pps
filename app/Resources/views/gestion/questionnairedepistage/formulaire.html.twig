{% extends 'AvanzuAdminThemeBundle:layout:base-layout.html.twig' %}
{% if form is defined %}{% form_theme form 'bootstrap_3_layout.html.twig' %}{% endif %}
{% block stylesheets %}
    {{ parent() }}
      <link rel="stylesheet" href="{{ asset('public/css/parsley.css') }}" />
      <style>
        .form-group {margin-bottom: 5px}
        .validator-rules > li {display: inline;margin-right: 2px}
        
      </style>
{% endblock %}

{% block page_content %}
    <div class="row">
        <!-- /.col -->
        <div class="col-md-12">

             <a class="btn btn-primary"
                            href="{{ path('gestion_lignequestionnaire_index', {id: questionnaire.id}) }}"
                           ><i class="fa fa-step-backward"></i> Retour </a>

                
            
                {{ form_errors(form)}}
                
                {{ form_start(form) }}

                <p>{{ questionnaire.introduction }}</p>
                
                {{ form_widget(form)}}

                 <p>{{ questionnaire.conclusion }}</p>
                
                {{ form_end(form) }}
            
            <!-- /.nav-tabs-custom -->
        
        </div>
        <!-- /.col -->
    </div>

{% endblock %}



{% block page_title %}
   {{ questionnaire.libelle }}
{% endblock %}

{% block page_subtitle %}
{% endblock %}