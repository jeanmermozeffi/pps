{% extends 'AvanzuAdminThemeBundle:layout:base-layout.html.twig' %}
 {% from 'macros/gestion.html.twig' import gestionnaire_assurance %}
    {% block page_content %}
     <div class="row">
        <div class="col-md-12">
            <!-- general form elements -->
            <div class="box box-danger">
                <div class="box-header">
                    <!-- Horizontal Form -->
                    <div class="">
                        <div class="box-header with-border">
                            <h3 class="box-title">Liste des assurances partenaires</h3>
                        </div>
                    </div>
                </div>
                <div class="box-body">
                  {{ form_errors(form) }}
                   {{ form_start(form, {'attr': {'role':'form', 'class': ''}}) }}
                      <div id="list-assurances"  data-prototype="{{ gestionnaire_assurance(form.assurances.vars.prototype)|e }}"></div>


                      <div class="form-group">
                        <button type="button" class="btn btn-default add_assurance btn-sm"
                            id="add_assurance">
                            <i class="fa fa-plus"></i>
                            Ajouter une assurance
                        </button>
                        
                        <div id="list_assurances" class="collection list_assurances">
                            {% for item in form.assurances %}
                                {{ gestionnaire_assurance(item|e) }}
                            {% endfor %}
                        </div>
                    </div>


                      <button type="submit" class="btn btn-success">Valider</button>
               
                   {{ form_widget(form._token, {id: form._token.vars.id ~ '_new' })}}
                  {{ form_end(form, {render_rest: false}) }}
                   
                </div>
            </div>
           
        </div>
    </div>
    
    {% endblock %}
{% block javascripts_inline %}
    <script>
    var $container = $('.list_assurances');
    const $addLink = $('#add_assurance');
   $addLink.click(function(e) {
        addLine($container);
       
        e.preventDefault(); // évite qu'un # apparaisse dans l'URL
    });
    // On définit un compteur unique pour nommer les champs qu'on va ajouter dynamiquement
    var index = $container.find('div.prototype_assurance').length;
    console.log(index);
    
    if (index > 0) {
        // Pour chaque echantillon déjà existante, on ajoute un lien de suppression
        $container.children('div.prototype_assurance').each(function() {
            const $this = $(this);
            init_select2($this.find('select'));
  
            addDeleteLink($this);
        });
    }
    // La fonction qui ajoute un formulaire Categorie
    function addLine($container) {
        // Dans le contenu de l'attribut « data-prototype », on remplace :
        // - le texte "__name__label__" qu'il contient par le label du champ
        // - le texte "__name__" qu'il contient par le numéro du champ
        var $prototype = $($("div#list-assurances").attr('data-prototype').replace(/__name__label__/g, 'file ' + (index + 1)).replace(/__name__/g, index));
        // On ajoute au prototype un lien pour pouvoir supprimer la prestation
        addDeleteLink($prototype);
        // On ajoute le prototype modifié à la fin de la balise <div>
        $container.append($prototype);

        init_select2($prototype.find('select'));

        index++;
    }
    // La fonction qui ajoute un lien de suppression d'une prestation
    function addDeleteLink($prototype) {
        // Création du lien
        $deleteLink = $('<a href="#" class="btn btn-danger btn-sm"><i class="fa fa-remove"></i></a>');
        // Ajout du lien
        $prototype.find(".del-col").append($deleteLink);
        // Ajout du listener sur le clic du lien
        $deleteLink.click(function(e) {
            const $parent = $(this).closest('.prototype_assurance');
            $parent.remove();
            if (index > 0) {
                index -= 1;
            }

            //$('.btn-ajax').prop('disabled', $('.prototype_assurance').length == 0);
            e.preventDefault(); // évite qu'un # apparaisse dans l'URL
        });
    }



     $('.del-col').find('a').click(function(e) {
            const $parent = $(this).closest('.prototype_assurance');
            $parent.remove();
            if (index > 0) {
                index -= 1;
            }

            //$('.btn-ajax').prop('disabled', $('.prototype_assurance').length == 0);
            e.preventDefault(); // évite qu'un # apparaisse dans l'URL
        });
    </script>
     
{% endblock %}
