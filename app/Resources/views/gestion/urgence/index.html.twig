{% extends 'AvanzuAdminThemeBundle:layout:base-layout.html.twig' %}

    {% block page_content %}
     <div class="row">
        <div class="col-md-12">
            <!-- general form elements -->
            <div class="box box-danger">
                <div class="box-header">
                    <!-- Horizontal Form -->
                    <div class="">
                        <div class="box-header with-border">
                            <h3 class="box-title">Liste des urgences</h3>
                        </div>
                    </div>
                </div>
                <div class="box-body">
                       <a class="btn btn-default"
                            href="{{ path('gestion_urgence_new') }}" 
                           ><i class="fa fa-plus"></i> Nouveau  </a>
                   
                    <div>
                        <div class="list-group">
                   
                    {% for urgence in urgences %}
                        <div class="list-group-item">
                            <p><strong>{{ urgence.motif }}</strong></p>
                            <p>Signal√© par {{ urgence.utilisateur.personne.nomComplet }} ( {{ urgence.utilisateur.personne.contact }} )</p>
                            <p>Localisation: {{ urgence.pays.nom }} - {{ urgence.ville.nom }} - {{ urgence.localisation }}</p>

                            <a class="btn btn-success"
                            href="{{ path('gestion_historiqueurgence_index', {id: urgence.id}) }}" 
                           ><i class="fa fa-eye"></i> Suivi  </a>
                        </div>
                    {% else %}
                        <div class="list-group-item text-center">Aucune urgence</div>
                    {% endfor %}
                    
                </div>
                                {# display navigation #}
                                <div class="navigation">
                                    {{ knp_pagination_render(urgences) }}
                                </div>
                            </div>

                </div>
            </div>
        </div>
    </div>
    
    {% endblock %}
 {% block page_title %}
        
    {% endblock %}