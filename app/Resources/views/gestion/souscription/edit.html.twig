    {% block page_content %}
    {% form_theme form 'bootstrap_3_layout.html.twig' %}
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                <span aria-hidden="true">&times;</span>
            </button>
            <h4 class="modal-title">Modification </h4>
        </div>
        {{ form_start(form, {'attr': {'role':'form', 'class': ''}}) }}
        <div class="modal-body">
             {% include 'ajax/response.html.twig' %}
            {{ form_widget(form) }}
        </div>
        <div class="modal-footer">
            {% include 'ajax/loader.html.twig' %}
            <button type="button" class="btn dark btn-default" data-dismiss="modal">Annuler</button>
            <button type="submit" class="btn blue btn-ajax">Modifier</button>
        </div>
        {{ form_end(form) }}
            
    {% endblock %}
