                                                    <th>Spécialité</th>
                                                    <th>Contact</th>
                                                    <th>Hopital</th>
                                                    <th>Actions</th>
                                                </tr>
                                                </thead>
                                                <tbody id="list_medecin" class="collection list_medecin">
                                                {% for item in edit_form.medecins %}
                                                    {{ medecins(item|e) }}
                                                {% endfor %}
                                                </tbody>

                                            </table>
                                        </div>
                                        <!-- /.box-body-->

                                    </div>
                                    <!-- /.box -->

                                </div>

