                                                        data-widget="collapse"
                                                        data-toggle="tooltip" style="margin-right: 5px;">
                                                    <i class="fa fa-minus"></i></button>
                                            </div>
                                            <!-- /. tools -->

                                            <i class="fa fa-flash"></i>

