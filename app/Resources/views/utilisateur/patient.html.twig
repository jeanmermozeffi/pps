                                                <div class="col-sm-8">
                                                    {{ form_widget(edit_form.lieuhabitation) }}
                                                </div>
                                            </div>

                                        </div>
                                    </div>


                                </div>
                                <div class="box-footer">
                                    <!-- Affections box -->
                                    <div class="box box-solid ">
