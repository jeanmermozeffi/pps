{% block page_content %}
 
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">Détails utilisateur</h4>
                </div>

                <div class="modal-body">
                    <form class="form-horizontal">
                        <div class="box-body">
                            {% if utilisateur.personne %}
                            <div class="form-group">
                                <label for="nom">Nom</label>
                                <p class="help-block">{{ utilisateur.personne.nom }} {{ utilisateur.personne.prenom }}</p>
                            </div>
                            {% endif %}
                            <div class="form-group">
                                <label>Pseudo</label>
                                <p class="help-block">{{ utilisateur.username }}</p>
                            </div>
                            <div class="form-group">
                                <label for="nom">Email</label>
                                <p class="help-block">{{ utilisateur.email }}</p>
                            </div>

                            <div class="form-group">
                                <label>Rôle</label>
                                <p class="help-block">{{ role }}</p>
                            </div>
                            {% if 'ROLE_MEDECIN' in utilisateur.roles %}
                                <div class="form-group">
                                <label>Spécialités</label>
                                {% if utilisateur.personne.medecin and utilisateur.personne.medecin.specialites|length %}
                                    <ul>
                                        {% for specialite in utilisateur.personne.medecin.specialites %}
                                            <li>{{ specialite.nom }}</li>
                                        {% endfor %}
                                    </ul>
                                {% endif %}
                                </div>
                            {% endif %}
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Annuler</button>
                </div>
            
{% endblock %}

