{% block page_content %}
    {% macro role(roles) %}
        <tr class="prototype_role even pointer">
            <td>{{ form_widget(roles) }}</td>
            <td></td>
        </tr>
    {% endmacro %}

    <button type="button" class="btn btn-warning" data-toggle="modal" data-target="#modal-edit{{groupe.id}}"><i class="fa fa-edit"></i></button>
    <div class="modal fade" id="modal-edit{{groupe.id}}">

        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">Modifier groupe</h4>
                </div>
                {{ form_start(edit_form) }}
                    <div class="modal-body">
                        <div class="box-body">
                            {{ form_widget(edit_form) }}
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Annuler</button>
                        <input type="submit" class="btn btn-primary pull-right" value="Modifier" />
                    </div>
                    {{ form_rest(edit_form) }}
                {{ form_end(edit_form) }}

            </div>
        </div>
    </div>

{% endblock %}
