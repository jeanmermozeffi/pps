                                                <div class="col-sm-12">
                                                    <label class="col-sm-4 control-label">Sexe</label>

                                                    <div class="col-sm-8">
                                                        {{ form_widget(edit_form.sexe) }}
                                                    </div>
                                                </div>

                                            </div>
                                        </div>
                                        <!-- /.box-body -->


                                    </div>

                                    <div class="col-md-6">

                                        <div class="box-body patient_img col-sm-offset-3">
                                            <div class="form-group">
                                                <img id="blah" class="profile-user-img img-responsive  dropzone" width=180 height=180
