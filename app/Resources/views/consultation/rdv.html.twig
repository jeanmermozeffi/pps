{% extends 'AvanzuAdminThemeBundle:layout:base-layout.html.twig' %}
{% from 'GestionBundle:Macros:macro.html.twig' import info_patient %}
{% block stylesheets %}
    {{ parent() }}
     {{ form_stylesheet(form) }}
{% endblock %}
{% block page_content %}

    <div class="row">
        <section class="col-md-3 connectedSortable">

            <!-- Profile Image -->
            <div class="box box-solid">
                <div class="box-header bg-light-blue-gradient">
                    <!-- tools box -->
                    <div class=" box-tools">
                        <button type="button" class="btn btn-primary btn-sm pull-right" data-widget="collapse"
                                data-toggle="tooltip"  style="margin-right: 5px;">
                            <i class="fa fa-minus"></i></button>
                    </div>
                    <!-- /. tools -->

                    <i class="fa fa-user"></i>

                    <h3 class="box-title">
                        Information Patient
                    </h3>
                </div>
                <div class="box-body box-profile">
                    
                    {{ info_patient(patient) }}

                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->

        </section>
        <!-- /.col -->
        <section class="col-md-9 connectedSortable">
            <div class="nav-tabs-custom">
                
                <div class="tab-content">

                    <div class="active tab-pane" id="nouvelle">
                        {{ form_start(form, {attr: {class: 'form_horizontal'}}) }}
                        <!-- general form elements -->
                        {{ form_errors(form) }}
                        {% if form.medecin is defined %}
                          {{ form_row(form.medecin) }}
                        {% endif %}

                        {{ form_row(form.dateRendezVous) }}
                        {% if not consultation %}
                        {{ form_row(form.identifiant) }}
                        {{ form_row(form.pin) }}
                        {% endif %}
                        {{ form_row(form.libRendezVous) }}
                        
                        {{ form_row(form._token)}}
                        <button class="btn btn-primary" type="submit">Valider</button>
                        {{ form_end(form, {render_rest: false}) }}
                            
                    </div>
                    <!-- /.tab-pane -->

                </div>
                <!-- /.tab-content -->
            </div>
            <!-- /.nav-tabs-custom -->
        </section>
        <!-- /.col -->
    </div>

{% endblock %}
{% block javascripts_inline %}
     {{ form_javascript(form) }}
{% endblock %}
{% block javascripts %}

    <script src="{{ asset('bundles/avanzuadmintheme/static/'~app.environment~'/scripts/admin-lte-all.js') }}"></script>
    <script src="{{ asset('select2/dist/js/select2.min.js') }}"></script>
    <script src="{{ asset('bundles/avanzuadmintheme/js/main.js') }}"></script>
    <script src="{{ asset('bundles/avanzuadmintheme/js/notify.js') }}"></script>

{% endblock %}

    {% block page_title %}
        Consultation :: RDV
    {% endblock %}

    {% block page_subtitle %}
    {% endblock %}

