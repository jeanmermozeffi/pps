{% extends 'AvanzuAdminThemeBundle:layout:base-layout.html.twig' %}

{% block page_content %}
    <div class="row">
        <div class="col-md-12">
            <!-- general form elements -->
            <div class="box box-primary">
                <div class="box-header">
                    <!-- Horizontal Form -->
                    <div class="">
                        <div class="box-header with-border">
                            <h3 class="box-title">Historique de la fiche {{ fiche.numFiche }} du patient {{ fiche.patient.personne.nomComplet }}</h3>
                        </div>
                    </div>
                </div>
                <div class="box-body">
                    <div class="list-group">
                        {% for historique in historiques %}
                            <div class="list-group-item">
                                <p style="margin-bottom: 0">{{ historique.dateHistoriqueFiche|date('d/m/Y Ã  H:i:s') }}</p>
                                <p style="margin-bottom: 0">Par {{ historique.utilisateur.personne.nomComplet|default(historique.utilisateur.username)}}</p>
                                <p>{{ historique.libHistoriqueFiche }}</p>

                            </div>
                        {% endfor %}
                    </div>
                    {{ knp_pagination_render(historiques) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
