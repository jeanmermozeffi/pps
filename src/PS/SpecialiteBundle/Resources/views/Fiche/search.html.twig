{% extends 'AvanzuAdminThemeBundle:layout:base-layout.html.twig' %}

{% block page_content %}

    <div class="row">
        <div class="col-md-12">
            <!-- general form elements -->

            <div class="box box-danger">
                <div class="box-header">
                    <div class="col-md-12">
                        <!-- /.box-header -->

                            <div class="login-box">
                                <div class="login-box-header">
                                    {% for flashMessage in app.session.flashBag.get('patient') %}
                                        <div class="alert alert-success fade in">
                                            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                                            {{ flashMessage }}
                                        </div>
                                    {% endfor %}
                                </div>
                                <div class="login-box-body">

                                {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
                                    <div class="form-group has-feedback">
                                        {{ form_widget(form.identifiant,{'attr':{'placeholder':'Identifiant'}}) }}
                                    </div>

                                    <div class="form-group has-feedback">
                                        {{ form_widget(form.pin,{'attr':{'placeholder':'Pin'}}) }}

                                    </div>

                                    <div class="form-group has-feedback">

                                        {{ form_row(form.submit,{'attr':{'class':'btn btn-primary btn-block'}}) }}

                                    </div>

                                {{ form_end(form) }}
                                </div>

                            </div>

                            <!-- /.box-body -->
                        </div>
                        <!-- /.box -->
                    </div>
                </div>

            </div>
        </div>
    </div>

{% endblock %}

{% block javascripts %}

    <script src="{{ asset('bundles/avanzuadmintheme/static/'~app.environment~'/scripts/admin-lte-all.js') }}"></script>
    <script src="{{ asset('select2/dist/js/select2.min.js') }}"></script>
    <script src="{{ asset('bundles/avanzuadmintheme/js/notify.js') }}"></script>

{% endblock %}

    {% block page_title %}
        Fiche:: Recherche
    {% endblock %}

    {% block page_subtitle %}
    {% endblock %}

