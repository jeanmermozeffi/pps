{% extends 'AvanzuAdminThemeBundle:layout:base-layout.html.twig' %}

{% block page_content %}
    <div class="row">
        <div class="col-md-12">
            <!-- general form elements -->
            <div class="box box-primary">
                <div class="box-header">
                    <!-- Horizontal Form -->
                    <div class="">
                        <div class="box-header with-border">
                            <h3 class="box-title">Liste des types de champ</h3>
                        </div>
                    </div>
                </div>
                <div class="box-body">
                    <a href="{{ path ('admin_specialite_typechamp_index') }}" class="btn btn-success"><i class="fa fa-repeat"></i></a>
                    {{ render(controller('PSSpecialiteBundle:TypeChamp:new')) }}
                    {{ grid(grid) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts_inline %}
    <script>
      
        $('#grid_wrapper').on('shown.bs.modal', '.modal', function (e) {
            var $target = $(e.relatedTarget);
            var action = $target.data('action') || $target.data('url');

            if (action) {
                var $this = $(this);
                var $modalBody = $this.find('.modal-content');
                if (!$modalBody.parent().is('form')) {
                    $modalBody.wrap($('<form />', {action: action, method: 'POST'}));
                }
            }
        });
    </script>

{% endblock %}
