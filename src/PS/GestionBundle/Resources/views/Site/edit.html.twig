{% block page_content %}
    {% form_theme form 'bootstrap_3_layout.html.twig' %}
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
            <span aria-hidden="true">&times;</span>
        </button>
        <h4 class="modal-title">Modification </h4>
    </div>
    {{ form_start(form, {'attr': {'role':'form', 'class': ''}}) }}
        <div class="modal-body">
            {% include 'ajax/response.html.twig' %}
            <div class="form-body">
                {% if site.logo %}
                    <img src="{{ asset('uploads/' ~ site.logo ) }}" height="60">
                {% endif %}
                {{ form_widget(form) }}
            </div>
        </div>
        <div class="modal-footer">
            {% include 'ajax/loader.html.twig' %}
            <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Fermer</button>
            <button type="submit" class="btn btn-primary  btn-ajax pull-left">Modifier</button>
        </div>
    {{ form_end(form) }}
            
{% endblock %}
{% block javascripts_inline %}
    <script>
        init_select2();
    </script>
     
{% endblock %}
