{% extends 'AvanzuAdminThemeBundle:layout:base-layout.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
     {{ form_stylesheet(form) }}
{% endblock %}
{% block page_content %}
    {{ form_start(form, {attr: {class: 'form_horizontal'}}) }}
     <div class="row">
        <section class="col-md-12">
           <div class="box">
                <div class="box-header with-border">
                    <h3 class="box-title">Annulation</h3>
                    <div class="box-tools pull-right">
                      <!-- Buttons, labels, and many other things can be placed here! -->
                      <!-- Here is a label for example -->
                      
                    </div>
                    <!-- /.box-tools -->
                </div>
                  <!-- /.box-header -->
                <div class="box-body">
                    <p><strong>Patient(e)</strong> {{ rendezVous.patient.personne.nom }} {{ rendezVous.patient.personne.prenom }}</p>
                    <p>Motif: {{ rendezVous.libRendezVous }}</p>
                    <p>Date: {{ rendezVous.dateRendezVous | date('d/m/Y') }}</p>
                    {{ form_errors(form) }}
                    {{ form_row(form.motifAnnulationRendezVous) }}
                    {{ form_row(form._token)}}
                </div>
                <div class="box-footer">
                    <button class="btn btn-primary" type="submit">Valider</button>
                </div>
                  <!-- /.box-body -->
                  
                  <!-- box-footer -->
            </div>
                <!-- /.box -->
        </section>
    </div>
     {{ form_end(form, {render_rest: false}) }}

     
{% endblock %}
{% block javascripts_inline %}
     {{ form_javascript(form) }}
{% endblock %}