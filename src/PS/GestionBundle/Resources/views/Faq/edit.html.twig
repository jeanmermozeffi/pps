{% block page_content %}

    <button type="button" class="btn btn-warning btn-sm" data-toggle="modal" data-target="#modal-edit{{faq.id}}" data-url="{{ edit_form.vars.action }} "><i class="fa fa-edit"></i></button>

    <div class="modal fade" id="modal-edit{{faq.id}}">



        <div class="modal-dialog">

            <div class="modal-content modal-lg">

                <div class="modal-header">

                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">

                        <span aria-hidden="true">&times;</span></button>

                    <h4 class="modal-title">Modification</h4>

                </div>

                {{ form_start(edit_form) }}

                   

                    <div class="modal-body">

                        <div class="box-body">

                           

                            <div class="form-group">

                                <label for="{{ edit_form.theme.vars.id ~ '_' ~  faq.id }}">Th√®me</label>



                                <div>

                                    {{ form_widget(edit_form.theme, {id: edit_form.theme.vars.id ~ '_' ~  faq.id}) }}

                                </div>

                            </div>

                             <div class="form-group">

                                <label for="{{ edit_form.question.vars.id ~ '_' ~  faq.id }}">Question</label>



                                <div>

                                    {{ form_widget(edit_form.question, {id: edit_form.question.vars.id ~ '_' ~  faq.id}) }}

                                </div>

                            </div>

                            <div class="form-group">

                                <label for="{{ edit_form.reponse.vars.id ~ '_' ~  faq.id }}">Reponse</label>



                                <div>

                                    {{ form_widget(edit_form.reponse, {id: edit_form.reponse.vars.id ~ '_' ~  faq.id}) }}

                                </div>

                            </div>

                            

                        </div>

                    </div>

                    <div class="modal-footer">

                        <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Annuler</button>

                        <input type="submit" class="btn btn-primary pull-right" value="Modifier" />

                    </div>

                    {{ form_widget(edit_form._token, {id: edit_form._token.vars.id ~ '_' ~ faq.id })}}

                   

                {{ form_end(edit_form) }}



            </div>

        </div>

    </div>

{% endblock %}

