{% block page_content %}
    <button type="button" class="btn btn-warning btn-sm" data-toggle="modal" data-target="#modal-edit{{commande.id}}" data-url="{{ edit_form.vars.action }} "><i class="fa fa-edit"></i></button>
    <div class="modal fade" id="modal-edit{{commande.id}}">

        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">Modification</h4>
                </div>
                {{ form_start(edit_form, { 'attr': {'class': 'form-horizontal'}}) }}
                    
                    <div class="modal-body">
                        <div class="box-body">
                            {{ form_errors(edit_form) }}
                            <div class="form-group">
                                <label for="{{ edit_form.corporate.vars.id ~ '_' ~  commande.id }}" class="col-sm-4">Raison sociale</label>

                                <div class="col-sm-8">
                                    {{ form_widget(edit_form.corporate,  {id: edit_form.corporate.vars.id ~ '_' ~  commande.id}) }}
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="{{ edit_form.qteCommande.vars.id ~ '_' ~  commande.id }}" class="col-sm-4">Quantité</label>

                                <div class="col-sm-8">
                                    {{ form_widget(edit_form.qteCommande, {id: edit_form.qteCommande.vars.id ~ '_' ~  commande.id}) }}
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="{{ edit_form.detailsCommande.vars.id ~ '_' ~  commande.id }}" class="col-sm-4">Quantité</label>

                                <div class="col-sm-8">
                                    {{ form_widget(edit_form.detailsCommande, {id: edit_form.detailsCommande.vars.id ~ '_' ~  commande.id}) }}
                                </div>
                            </div>
                            
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Annuler</button>
                        <input type="submit" class="btn btn-primary pull-right" value="Modifier" />
                    </div>
                   {{ form_widget(edit_form._token, {id: edit_form._token.vars.id ~ '_' ~ commande.id })}}
                {{ form_end(edit_form, {render_rest: false}) }}

            </div>
        </div>
    </div>
{% endblock %}
