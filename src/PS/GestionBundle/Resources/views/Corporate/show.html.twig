    {% block page_content %}
    <button type="button" class="btn btn-default btn-sm" data-toggle="modal" data-target="#modal-details{{corporate.id}}"><i class="fa fa-list-alt"></i></button>
    <div class="modal fade" id="modal-details{{corporate.id}}">

        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">Details</h4>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label>Raison sociale</label>
                        <p class="help-block">{{ corporate.raisonSociale }}</p>
                    </div>
                    <div class="form-group">
                        <label for="nom">Contact</label>
                        <p class="help-block">{{ corporate.contact }}</p>
                    </div>
                </div>

            </div>
        </div>
    </div>
    {% endblock %}
