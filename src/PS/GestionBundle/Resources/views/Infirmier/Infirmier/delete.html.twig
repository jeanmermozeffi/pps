<button type="button" class="btn btn-danger btn-sm" data-toggle="modal" data-target="#modal-delete{{infirmier.id }}"><i class="fa fa-remove"></i></button>
<div class="modal " id="modal-delete{{infirmier.id}}">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <style>
                #modal-delete{{infirmier.id}} {
                    text-align: center;
                    padding: 0!important;
                }

                #modal-delete{{infirmier.id}}:before {
                    content: '';
                    display: inline-block;
                    height: 100%;
                    vertical-align: middle;
                    margin-right: -4px;
                }

                #modal-delete{{infirmier.id}} .modal-dialog {
                    display: inline-block;
                    text-align: left;
                    vertical-align: middle;
                }
            </style>
            {{ form_start(form) }}
            <div class="modal-body">
                Souhaitez-vous supprimer d√©finitivement <span style="color: red">{{infirmier.medecin.personne.getNomComplet }}</span>?
            </div>

            <div class="modal-footer">
                <button class="bouton btn btn-danger" >Supprimer</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Annuler</button>
            </div>
             {{ form_widget(form._token, {id: form._token.vars.id ~ '_delete_' ~ infirmier.id})}}
            {{ form_end(form, {render_rest: false}) }}
        </div>                                    <!-- modal-content -->
    </div>
                                        <!-- modal-dialog -->
</div>