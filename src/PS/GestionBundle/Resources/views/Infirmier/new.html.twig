{% block page_content %}
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#modal-default"><i class="fa fa-plus"></i></button>
    <div class="modal fade" id="modal-default">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">Ajouter infirmier</h4>
                </div>

                {{ form_start(form, {attr: {id: 'form_new'}}) }}
                    <div class="modal-body">
                        <div class="box-body">
                            <div class="ajax-feedback hide alert"></div>
                            <fieldset>
                                <legend>Informations Personnelles</legend>
                                <div class="form-group">
                                    <label for="{{ form.personne.nom.vars.id }}">Nom <span class="text-danger">*</span></label>
                                    {{ form_widget(form.medecin.personne.nom, {required: true}) }}
                                </div>
                                <div class="form-group">
                                    <label for="{{ form.personne.prenom.vars.id }}">Prénom <span class="text-danger">*</span></label>
                                    {{ form_widget(form.medecin.personne.prenom, {required: true}) }}
                                </div>
                                <div class="form-group">
                                    <label for="{{ form.hopital.vars.id }}">Hopital <span class="text-danger">*</span></label>
                                   {{ form_widget(form.medecin.hopital, {required: true}) }}
                                </div>
                            </fieldset> 
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Annuler</button>
                        <input type="submit" class="btn btn-primary pull-right btn-ajax" value="Créer" />
                    </div>
                    {{ form_widget(form._token, {id: form._token.vars.id ~ '__new'})}}
                {{ form_end(form, {render_rest: false}) }}
            </div>
        </div>
    </div>
{% endblock %}
